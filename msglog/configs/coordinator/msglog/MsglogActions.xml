<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE ActuatorType SYSTEM "ActuatorTypeDTD.dtd">

<ActuatorType name="org.cougaar.mts.std.LinksEnablingAction" 
              affectsAssetType="Agent" 
              affectsStateDimension="MsglogSetting" 
              actionType="COMPENSATORY">

    <Action name="SuppressCommunications">
        <Description value="Suppresses attempts to communicate" />
        <Transition WhenActualStateIs="*" EndStateWillBe="SuppressCommunications" IntermediateStateWillBe="SuppressCommunications" >
            <OneTimeCost>
                <Time duration="100" />
            </OneTimeCost>
        </Transition>
    </Action>
    
    <Action name="Normal">
        <Description value="Tries Normal RMI Communications only" />
        <Transition WhenActualStateIs="*" EndStateWillBe="NormalRMIProtocol" IntermediateStateWillBe="SuppressCommunications" >
            <OneTimeCost>
                <Time duration="100" />
            </OneTimeCost>
            <ContinuingCost>
                <Bandwidth intensity="LOW" msgSizeFactor="TRUE" />
            </ContinuingCost>
        </Transition>
    </Action>

    <Action name="AlternateDirectProtocols">
        <Description value="Adds other Direct Protocols to RMI" />
        <Transition WhenActualStateIs="*" EndStateWillBe="AlternateDirectProtocols" IntermediateStateWillBe="SuppressCommunications">
            <OneTimeCost>
                <Time duration="100" />
            </OneTimeCost>
            <ContinuingCost>
                <Bandwidth intensity="LOW" msgSizeFactor="TRUE" />
	          <CPU intensity="LOW" msgSizeFactor="TRUE" />
            </ContinuingCost>
        </Transition>
    </Action>

    <Action name="StoreAndForwardProtocols">
        <Description value="Adds the use of Store and Forward Protocols" />
        <Transition WhenActualStateIs="*" EndStateWillBe="StoreAndForwardProtocols" IntermediateStateWillBe="SuppressCommunications" >
            <OneTimeCost>
                <Time duration="1000" />
            </OneTimeCost>
            <ContinuingCost>
                <Bandwidth intensity="MEDIUM" msgSizeFactor="TRUE" />
	          <CPU intensity="MEDIUM" msgSizeFactor="TRUE" />
            </ContinuingCost>
        </Transition>
    </Action>

</ActuatorType>