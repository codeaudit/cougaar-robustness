<project name="msglog" default="create_cougaar_overlay" basedir=".">

<property name="src" value="src"/>
<property name="build" value="build"/>
<property name="jar" value="msglog.jar"/>
<property environment="env"/>
<property name="cougaar" value="${env.COUGAAR_INSTALL_PATH}"/>
    
	<path id="cougaar.libs">
		<pathelement location="sys/activation.jar"/>
		<pathelement location="sys/mail.jar"/>
		<pathelement location="/var/www/html/jars/Robustness_objs_common_HEAD_B10_4_1.jar"/>
		<fileset dir="${cougaar}/lib">
			<include name="**/*.jar"/>
		</fileset>
		<fileset dir="${cougaar}/sys">
			<include name="**/*.jar"/>
		</fileset>
  </path>

	<target name="delete">
      <delete dir="${build}"/>
      <mkdir dir="${build}"/>
  </target>

  <target name="compile">
        <javac  deprecation="true" 
                debug="true" 
                optimize="false" 
                srcdir="${src}" 
                destdir="${build}">
                <classpath refid="cougaar.libs"/>
        </javac>
	</target>

	<target name="jar" depends="compile">
		<jar jarfile="${jar}" baseDir="${build}"/>
	</target>

	<target name="create_cougaar_overlay">
		<mkdir dir="staging/lib"/>
		<mkdir dir="staging/sys"/>
		<mkdir dir="staging/csmart"/>
		<mkdir dir="staging/operator"/>
		<antcall target="delete"/>
		<antcall target="jar"/>
		<signjar jar="${jar}" keystore="/home/build/signingCA_keystore" alias="privileged" storepass="keystore"/>
		<signjar jar="sys/mail.jar" keystore="/home/build/signingCA_keystore" alias="privileged" storepass="keystore"/>
		<signjar jar="sys/activation.jar" keystore="/home/build/signingCA_keystore" alias="privileged" storepass="keystore"/>
		<move file="${jar}" todir="staging/lib"/>
		<copy todir="staging/sys">
			<fileset dir="sys/">
				<include name="*.jar"/>
			</fileset>
		</copy>
		<copy todir="staging/csmart/">
			<fileset dir="csmart/"/>
		</copy>
		<copy todir="staging/operator">
			<fileset dir="operator/"/>
		</copy>
		<zip zipfile="AR_objs_msglog.zip" basedir="staging"/>
		<delete dir="staging"/>
	</target>

	<target name="clean" depends="delete,compile,jar"/>
    
</project>



