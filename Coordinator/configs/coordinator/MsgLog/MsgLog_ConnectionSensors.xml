<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE SensorTypes SYSTEM "SensorTypeDTD.dtd" >

<SensorTypes>

<SensorType name="org.cougaar.coordinator.test.defense.msglog.RMI_LinkStatusSensor" sensesAssetType="agent"
            sensesStateDimension="UnmediatedConnectionStatus" sensorLatency="5000">
    <PotentialDiagnoses>
        <Diagnosis name="Good" />
        <Diagnosis name="Degraded" />
        <Diagnosis name="Cannot_Communicate_With" />
    </PotentialDiagnoses>
    <Diagnoses>
        <WhenActualStateIs name="OK" >
            <WillDiagnoseAs name="Good" withProbability="0.999" />
            <WillDiagnoseAs name="Degraded" withProbability="0.001" />
        </WhenActualStateIs >
        <WhenActualStateIs name="Protocol_Failure" >
            <WillDiagnoseAs name="Cannot_Communicate_With" withProbability="0.99" />
            <WillDiagnoseAs name="Degraded" withProbability="0.01" />
        </WhenActualStateIs >
        <WhenActualStateIs name="Stationary_Partition" >
            <WillDiagnoseAs name="Cannot_Communicate_With" withProbability="0.99" />
            <WillDiagnoseAs name="Degraded" withProbability="0.01" />
        </WhenActualStateIs >
        <WhenActualStateIs name="Rolling_Partition" >
            <WillDiagnoseAs name="Cannot_Communicate_With" withProbability="0.99" />
            <WillDiagnoseAs name="Degraded" withProbability="0.01" />
        </WhenActualStateIs >
    </Diagnoses>
</SensorType>

