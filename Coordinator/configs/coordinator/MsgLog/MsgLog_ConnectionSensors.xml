<SensorType name="org.cougaar.coordinator.test.defense.msglog.MediatedConnectionStatusSensor" sensesAssetType="agent"
            sensesStateDimension="MediatedConnectionStatus" sensorLatency="10000">
    <PotentialDiagnoses>
        <Diagnosis name="Good" />
        <Diagnosis name="Degraded_1" />
        <Diagnosis name="Degraded_2" />
        <Diagnosis name="Degraded_3" />
        <Diagnosis name="Cannot_Communicate_With" />
    </PotentialDiagnoses>
    <Diagnoses>
        <WhenActualStateIs name="Good" >
            <WillDiagnoseAs name="Good" withProbability="0.999" />
            <WillDiagnoseAs name="Degraded_1" withProbability="0.001" />
        </WhenActualStateIs >
        <WhenActualStateIs name="Degraded_1" >
            <WillDiagnoseAs name="Good" withProbability="0.998" />
            <WillDiagnoseAs name="Degraded_1" withProbability="0.001" />
            <WillDiagnoseAs name="Degraded_2" withProbability="0.001" />
        </WhenActualStateIs >
        <WhenActualStateIs name="Degraded_2" >
            <WillDiagnoseAs name="Degraded_2" withProbability="0.998" />
            <WillDiagnoseAs name="Degraded_1" withProbability="0.001" />
            <WillDiagnoseAs name="Degraded_3" withProbability="0.001" />
        </WhenActualStateIs >
        <WhenActualStateIs name="Degraded_3" >
            <WillDiagnoseAs name="Degraded_3" withProbability="0.998" />
            <WillDiagnoseAs name="Degraded_2" withProbability="0.001" />
            <WillDiagnoseAs name="Cannot_Communicate_With" withProbability="0.001" />
        </WhenActualStateIs >
        <WhenActualStateIs name="Cannot_Communicate_With" >
            <WillDiagnoseAs name="Cannot_Communicate_With" withProbability="0.999" />
            <WillDiagnoseAs name="Degraded_3" withProbability="0.001" />
        </WhenActualStateIs >
    </Diagnoses>
</SensorType>

</SensorTypes>