<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE SensorType SYSTEM "SensorTypeDTD.dtd" >

<SensorType name="org.cougaar.coordinator.leashDefenses.LeashRequestDiagnosis" 
            sensesAssetType="Enclave"
            sensesStateDimension="DefenseSuppression" 
            sensorLatency="10">
    <PotentialDiagnoses>
        <Diagnosis name="LeashDefenses" />
        <Diagnosis name="UnleashDefenses" />
    </PotentialDiagnoses>
    <Diagnoses>
        <WhenActualStateIs name="LeashDefenses" >
            <WillDiagnoseAs name="LeashDefenses" withProbability="1.0" />
        </WhenActualStateIs >
        <WhenActualStateIs name="UnleashDefenses" >
            <WillDiagnoseAs name="UnleashDefenses" withProbability="1.0" />
        </WhenActualStateIs >
    </Diagnoses>
</SensorType>
