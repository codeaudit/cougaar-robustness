<SensorType name="org.cougaar.coordinator.test.defense.plannedDisconnect.RequestToDisconnectNodeSensor" sensesAssetType="node"
            sensesStateDimension="DesireToCommunicateStatus" sensorLatency="1000">
    <PotentialDiagnoses>
        <Diagnosis name="Disconnect_Request" />
        <Diagnosis name="Reconnect_Request" />
        <Diagnosis name="Tardy" />
    </PotentialDiagnoses>
    <Diagnoses>
        <WhenActualStateIs name="No" >
            <WillDiagnoseAs name="Disconnect_Request" withProbability="0.9998" />
            <WillDiagnoseAs name="Reconnect_Request" withProbability="0.0001" />
            <WillDiagnoseAs name="Tardy" withProbability="0.0001" />
        </WhenActualStateIs >
        <WhenActualStateIs name="Yes" >
            <WillDiagnoseAs name="Reconnect_Request" withProbability="0.9998" />
            <WillDiagnoseAs name="Reconnect_Request" withProbability="0.0001" />
            <WillDiagnoseAs name="Tardy" withProbability="0.0001" />
        </WhenActualStateIs >
        <WhenActualStateIs name="Tardy" >
            <WillDiagnoseAs name="Tardy" withProbability="0.9998" />
