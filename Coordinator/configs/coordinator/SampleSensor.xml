<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE SensorType SYSTEM "SensorTypeDTD.dtd">

<SensorType name="org.cougaar.coordinator.examples.SampleDefense.SampleDiagnosis" 
            sensesAssetType="Agent"
            sensesStateDimension="Eavesdropping" 
            sensorLatency="47">
    <PotentialDiagnoses>
        <Diagnosis name="Low Threat" />
        <Diagnosis name="Medium Threat" />
        <Diagnosis name="High Threat" />
        <Diagnosis name="No Threat" />
    </PotentialDiagnoses>
    <Diagnoses>
        <WhenActualStateIs name="NoVulnerability" >
            <WillDiagnoseAs name="No Threat" withProbability="0.93" />
            <WillDiagnoseAs name="Low Threat" withProbability="0.04" />
            <WillDiagnoseAs name="Medium Threat" withProbability="0.02" />
            <WillDiagnoseAs name="High Threat" withProbability="0.01" />
        </WhenActualStateIs >
        <WhenActualStateIs name="LowVulnerability" >
            <WillDiagnoseAs name="No Threat" withProbability="0.04" />
            <WillDiagnoseAs name="Low Threat" withProbability="0.90" />
            <WillDiagnoseAs name="Medium Threat" withProbability="0.04" />
            <WillDiagnoseAs name="High Threat" withProbability="0.02" />
        </WhenActualStateIs >
        <WhenActualStateIs name="MediumVulnerability" >
            <WillDiagnoseAs name="No Threat" withProbability="0.02" />
            <WillDiagnoseAs name="Low Threat" withProbability="0.04" />
            <WillDiagnoseAs name="Medium Threat" withProbability="0.90" />
            <WillDiagnoseAs name="High Threat" withProbability="0.04" />
        </WhenActualStateIs >
        <WhenActualStateIs name="HighVulnerability" >
            <WillDiagnoseAs name="No Threat" withProbability="0.01" />
            <WillDiagnoseAs name="Low Threat" withProbability="0.02" />
            <WillDiagnoseAs name="Medium Threat" withProbability="0.04" />
            <WillDiagnoseAs name="High Threat" withProbability="0.93" />
        </WhenActualStateIs >
    </Diagnoses>
</SensorType>
