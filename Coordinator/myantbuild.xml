<project name="coordinator" default="create_cougaar_overlay" basedir=".">

<property name="src" value="src"/>
<property name="build" value="build"/>
<property name="jar" value="coordinator.jar"/>
<property environment="env"/>
<property name="cougaar" value="${env.COUGAAR_INSTALL_PATH}"/>
    
	<path id="cougaar.libs">
		<fileset dir="${cougaar}/lib">
			<include name="**/*.jar"/>
		</fileset>
		<fileset dir="${cougaar}/sys">
			<include name="**/*.jar"/>
		</fileset>
        </path>

	<target name="delete">
        <delete dir="${build}"/>
        <mkdir dir="${build}"/>
  </target>

  <target name="compile">
        <javac  deprecation="true" 
                debug="true" 
                optimize="false" 
                srcdir="${src}" 
                destdir="${build}">
                <classpath refid="cougaar.libs"/>
        </javac>
	</target>

	<target name="jar" depends="compile">
		<jar jarfile="${jar}" baseDir="${build}"/>
	</target>

	<target name="create_cougaar_overlay">
		<mkdir dir="staging/lib"/>
		<mkdir dir="staging/examples"/>
		<mkdir dir="staging/test"/>
		<antcall target="delete"/>
		<antcall target="jar"/>
		<signjar jar="${jar}" keystore="/var/build/signingCA_keystore" alias="privileged" storepass="keystore"/>
                <copy file="${jar}" todir="${cougaar}/lib"/>
                <move file="${jar}"  todir="staging/lib"/>
		<copy todir="staging/examples/">
			<fileset dir="examples/"/>
		</copy>	
		<copy todir="staging/test/">
			<fileset dir="test/"/>
		</copy>	
                <zip zipfile="AC_objs_coordinator.zip" basedir="staging"/>
                <delete	dir="staging"/>
	</target>

	<target name="clean" depends="delete,compile,jar"/>
    
</project>



